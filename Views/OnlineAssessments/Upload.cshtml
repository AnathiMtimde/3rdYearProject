@model AssessmentBusiness.Assessment

@{
    ViewBag.Title = "Create";
}

<h2>Upload Assessment</h2>


@using (Html.BeginForm("Upload","OnlineAssessments",FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input id="AssessmentId"
           name="AssessmentId"
           type="hidden"
           value=@ViewBag.AssessmentId />

    <div class="form-horizontal">
        <h4>Assessment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            <div class="col-md-10">
                <h4>Assessment Document</h4>
                <input type="file" name="assessmentDocument" id="assessmentDocument" accept=".pdf" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit Assessment" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
