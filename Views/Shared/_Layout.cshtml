                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-book"></i>
                                <span>Library </span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">
                                <li>@Html.ActionLink("Make Reservation", "BooksView", "Books")</li>
                                <li>@Html.ActionLink("My Reservation", "Index", "BookReservations")</li>
                                <li>@Html.ActionLink("Book Library Room", "Create", "GrpRoomReservations")</li>
                            </ul>
                        </li>

                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-commenting"></i>
                                <span>LIve Chat </span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">
                                <li>@Html.ActionLink("Chat", "Index", "Home")</li>
                            </ul>
