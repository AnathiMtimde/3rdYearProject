
<!DOCTYPE html>
<html>
<head>
    @using System.Web.Optimization
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        fieldset {
            width: 90%;
            border-bottom: 1px solid #b7b7b7;
            margin-bottom: 15px;
            background-color: white;
            border-radius: 10px;
        }

        .link {
            text-decoration: none;
        }

        .tabs {
            padding-top: 2%;
            margin-left: 15%;
        }

            .tabs span {
                display: inline-block;
                padding-right: 4px;
            }

        strong span {
            display: inline-block;
            padding-right: 6px;
        }
    </style>
    <meta name="viewport" content="width=device-width" />

    <title>High School App</title>

    <link rel="shortcut icon" href="img/favicon.png">

    <link href="~/Content1/AdminLayout/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content1/AdminLayout/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content1/AdminLayout/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content1/AdminLayout/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content1/AdminLayout/css/widgets.css" rel="stylesheet" />
    <link href="~/Content1/AdminLayout/css/style.css" rel="stylesheet" />
    <link href="~/Content1/AdminLayout/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" />

    <link href="~/Content1/AdminLayout/css/owl.carousel.css" rel="stylesheet" />

</head>
<body>
    @{
        var classRoomList = @DGSappSem2.Models.AssessmentBusiness.StudentViewModel.getClassRoomList();

    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-collapse collapse">
                <h4 style="color:white" class="nav navbar-nav">
                    Tel: 031- 9074566
                    <br />
                    <br />
                    Email: DGSS@gmail.com
                </h4>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        <aside>
            <div id="sidebar" class="nav-collapse blue-bg">
                <ul class="sidebar-menu">
                    <li class="active">
                        <a href="@Url.Action("Index","Home")">
                            <i class="icon_house_alt"></i>
                            <span>DGSS</span>
                        </a>
                    </li>

                    @if (!User.IsInRole("Admin"))
                    {
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-calendar"></i>
                                <span>Timetables </span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>

                            <ul class="sub">
                                <li><a href="@Url.Action("Index","StudentTimetables")">Student Timetables </a></li>
                                <li><a href="@Url.Action("Index","StaffTimetables")">Staff Timetables </a></li>
                            </ul>

                        </li>

                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-file-text"></i>
                                <span>Class Rooms </span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>

                            <ul class="sub">
                                @foreach (var item in classRoomList)
                                {

                                    <li><a href="@Url.Action("SubjectList","Subjects", new {classroomId = item.ClassRoomID,gradeName = item.GradeName })">@item.GradeName </a></li>
                                }
                            </ul>
                        </li>  
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-file-text"></i>
                                <span>Graphical Report</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>

                            <ul class="sub">
                                @foreach (var item in classRoomList)
                                {

                                    <li><a href="@Url.Action("GraphicalReports","Subjects", new {classroomId = item.ClassRoomID,gradeName = item.GradeName })">@item.GradeName </a></li>
                                }
                            </ul>
                        </li>
                        @* Menu 2 --ending *@

                        @* Menu 3 *@
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-user"></i>
                                <span>Manage Staff </span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>

                            <ul class="sub">


                                <li><a href="@Url.Action("Create","Staffs")">Register </a></li>

                                <li><a href="@Url.Action("Create","StaffAttendances")">Log Book </a></li>
                            </ul>

                        </li>
                        @* Menu 3 ending *@
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-folder"></i>
                                <span>Course Material</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>

                            <ul class="sub">
                                <li><a href="@Url.Action("CourseMaterial","Subjects")">Documents </a></li>
                                <li><a href="@Url.Action("Index","Subjects")">Aggregate Required </a></li>
                            </ul>

                        </li>
                        @*Menu 4*@
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-graduation-cap"></i>
                                <span>Applications</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">
                                <li><a href="@Url.Action("Create","Students")">Apply Here </a></li>
                                <li><a href="@Url.Action("Index","Students")">Allocate Student</a></li>
                            </ul>
                        </li>

                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                @*<i class="fa fa-files-o"></i>*@
                                <span>Grade Management</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">
                                <li><a href="@Url.Action("Create","Terms")">Term </a></li>
                                <li><a href="@Url.Action("Create","ClassRooms")">Grade</a></li>

                            </ul>
                        </li>
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-book"></i>
                                <span>Library </span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>
                            <ul class="sub">
                                <li>@Html.ActionLink("Make Reservation", "BooksView", "Books")</li>
                                <li>@Html.ActionLink("My Reservation", "Index", "BookReservations")</li>
                                <li>@Html.ActionLink("Book Library Room", "GroupRoomView", "GroupRooms")</li>
                                <li>@Html.ActionLink("Room", "Create", "GroupRooms")</li>
                                <li>@Html.ActionLink("Book Categoris", "Index", "BookCategories")</li>
                                <li>@Html.ActionLink("Books", "Index", "Books")</li>
                                <li>@Html.ActionLink("Penalty Costs", "Index", "PenaltyCosts")</li>
                            </ul>
                        </li>

                        @*Menu 4*@
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-file"></i>
                                <span>Reports </span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>

                            <ul class="sub">
                                @foreach (var item in classRoomList)
                                {

                                    <li><a href="@Url.Action("StudentList","StudentAssessments", new {classroomId = item.ClassRoomID,gradeName = item.GradeName })">@item.GradeName </a></li>
                                }
                            </ul>


                        </li>


                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-money"></i>
                                <span>Payment</span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>

                            <ul class="sub">


                                <li><a href="@Url.Action("Index","Paypal")">Deposit </a></li>
                            </ul>


                        </li>
                    }

                    @if (User.IsInRole("Student"))
                    {
                        <li class="sub-menu">
                            <a href="javascript:;" class="">
                                <i class="fa fa-calendar"></i>
                                <span>Timetable </span>
                                <span class="menu-arrow arrow_carrot-right"></span>
                            </a>

                            <ul class="sub">
                                <li><a href="@Url.Action("Create","StudentTimetables")">Student Timetables </a></li>
